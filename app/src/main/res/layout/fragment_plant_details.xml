<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_padding"
    tools:targetApi="lollipop">

    <ImageView
        android:id="@+id/plant_details_type_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:transitionName="@string/transition_name_plant_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_cactus" />

    <TextView
        android:id="@+id/plant_details_name_text_view"
        style="@style/PlantTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plant_details_type_image_view"
        tools:text="Cactus" />

</androidx.constraintlayout.widget.ConstraintLayout>
